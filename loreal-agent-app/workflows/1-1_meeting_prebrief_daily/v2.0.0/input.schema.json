{
  "type": "object",
  "properties": {
    "store_id": { "type": "string" },
    "store_name": { "type": "string" },
    "biz_date": { "type": "string" },
    "data_cutoff_time": { "type": "string" },
    "his": {
      "type": "object",
      "properties": {
        "visits": { "type": "number" },
        "gmv": { "type": "number" },
        "consumption": { "type": "number" },
        "avg_ticket": { "type": "number" },
        "new_customers": { "type": "number" },
        "old_customers": { "type": "number" },
        "top_items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "item": { "type": "string" },
              "amount": { "type": "number" }
            },
            "required": ["item", "amount"]
          }
        },
        "targets": {
          "type": "object",
          "properties": {
            "gmv_target": { "type": "number" },
            "consumption_target": { "type": "number" }
          }
        }
      },
      "required": [
        "visits",
        "gmv",
        "consumption",
        "avg_ticket",
        "new_customers",
        "old_customers"
      ]
    },
    "mtd": {
      "type": "object",
      "properties": {
        "gmv": { "type": "number" },
        "consumption": { "type": "number" },
        "time_progress": { "type": "number" },
        "gmv_target": { "type": "number" },
        "consumption_target": { "type": "number" }
      }
    },
    "appointments_tomorrow": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "customer_id": { "type": "string" },
          "time": { "type": "string" },
          "item": { "type": "string" },
          "staff_id": { "type": "string" },
          "is_first_visit": { "type": "boolean" }
        },
        "required": ["customer_id", "time", "item", "staff_id"]
      }
    },
    "wecom_touch": {
      "type": "object",
      "properties": {
        "tasks_sent": { "type": "number" },
        "contacted": { "type": "number" },
        "replied": { "type": "number" },
        "no_reply_list": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "customer_id": { "type": "string" },
              "last_touch_at": { "type": "string" },
              "staff_id": { "type": "string" }
            },
            "required": ["customer_id", "last_touch_at", "staff_id"]
          }
        }
      }
    },
    "baselines": {
      "type": "object",
      "properties": {
        "rolling_7d": {
          "type": "object",
          "properties": {
            "visits_avg": { "type": "number" },
            "gmv_avg": { "type": "number" },
            "consumption_avg": { "type": "number" },
            "avg_ticket_avg": { "type": "number" }
          }
        },
        "rolling_28d": {
          "type": "object",
          "properties": {
            "visits_avg": { "type": "number" },
            "gmv_avg": { "type": "number" },
            "consumption_avg": { "type": "number" }
          }
        }
      }
    },
    "staff_stats": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "staff_name": { "type": "string" },
          "today_gmv": { "type": "number" },
          "today_consumption": { "type": "number" },
          "mtd_gmv": { "type": "number" },
          "mtd_consumption": { "type": "number" },
          "r12_rate": { "type": "number" }
        },
        "required": ["staff_name"]
      }
    },
    "customer_summary": {
      "type": "object",
      "properties": {
        "new": {
          "type": "object",
          "properties": {
            "count": { "type": "number" },
            "gmv": { "type": "number" }
          }
        },
        "old": {
          "type": "object",
          "properties": {
            "count": { "type": "number" },
            "gmv": { "type": "number" }
          }
        },
        "single_item_customers": { "type": "number" },
        "vip_customers": { "type": "number" }
      }
    },
    "key_items_mtd": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "item": { "type": "string" },
          "gmv_mtd": { "type": "number" },
          "consumption_mtd": { "type": "number" },
          "wow_gmv": { "type": "number" },
          "wow_consumption": { "type": "number" }
        },
        "required": ["item"]
      }
    },
    "task_execution": {
      "type": "object",
      "properties": {
        "followup_done_rate": { "type": "number" },
        "photo_sent_rate": { "type": "number" },
        "postop_reminder_rate": { "type": "number" },
        "ai_record_rate": { "type": "number" },
        "emr_done_rate": { "type": "number" },
        "missing_photo_list": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "customer_id": { "type": "string" },
              "item": { "type": "string" }
            },
            "required": ["customer_id"]
          }
        }
      }
    }
  },
  "required": ["store_id", "biz_date", "his"]
}
